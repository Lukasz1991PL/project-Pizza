{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2015,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["warn", 2],
    "linebreak-style": ["off"],
    "quotes": ["warn", "single", { "allowTemplateLiterals": true }],
    "semi": ["warn", "always"],
    "no-console": ["off"],
    "no-unused-vars": ["warn", { "vars": "all", "args": "after-used" }]
  },
  "globals": {
    "Handlebars": false
  }
}
